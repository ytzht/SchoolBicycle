<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.bicycle.ui.Ivfriends.IvfriendsActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入朋友的邀请码，互赠信用"
        android:textColor="@color/all_textc"
        android:textSize="12dp"

        android:layout_marginTop="60dp"
        android:id="@+id/textView14"
        android:layout_alignLeft="@+id/relativeLayout5"
        android:layout_alignStart="@+id/relativeLayout5" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/relativeLayout5">

        <EditText
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:paddingLeft="6dp"
            android:background="#f0f0f0"
            android:hint="输入朋友的邀请码"
            android:textColorHint="#cecece"
            android:textSize="12dp"
            android:id="@+id/friends_num"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="提交"
            android:id="@+id/submit_num"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="#ff6a38"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的邀请码为：18153527447"
        android:textColor="@color/all_textc"
        android:textSize="12dp"
        android:id="@+id/tuijianma"
        android:layout_below="@+id/relativeLayout5"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@+id/relativeLayout5"
        android:layout_alignStart="@+id/relativeLayout5" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="将您的邀请码分享给好友"
        android:textColor="#cecece"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:layout_below="@+id/tuijianma"
        android:layout_marginTop="12dp"
        android:id="@+id/textView16" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好友填写后双方都将获得信用分"
        android:textColor="#cecece"
        android:textSize="12dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true" />
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="100dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/edittext"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/edittext"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/share_weixin"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_weixin"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:id="@+id/imageView11" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信好友"
                android:layout_below="@+id/imageView11"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/share_qq"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_qq"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:id="@+id/imageView12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ好友"
                android:layout_below="@+id/imageView12"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/share_pengyouquan"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_pengyouquan"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:id="@+id/imageView13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朋友圈"
                android:layout_below="@+id/imageView13"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/share_weibo"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_weibo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:id="@+id/imageView14" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新浪微博"
                android:layout_below="@+id/imageView14"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/share_kongjian"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_kongjian"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:id="@+id/imageView15" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ空间"
                android:layout_below="@+id/imageView15"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
