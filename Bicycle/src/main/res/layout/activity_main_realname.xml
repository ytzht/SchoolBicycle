<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.bicycle.ui.authentication.RealnameActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:orientation="horizontal"
        android:layout_marginTop="52dp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="13dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/viewDivider">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_user"
                android:padding="5dp"
                android:id="@+id/imageView2" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:background="@null"
                android:hint="请输入姓名"
                android:textColorHint="@color/edittext"
                android:id="@+id/rn_name"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="13dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="13dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/viewDivider">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_id"
                android:padding="5dp"
                android:id="@+id/imageView3" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView3"
                android:background="@null"
                android:hint="请输入身份证号"
                android:textColorHint="@color/edittext"
                android:id="@+id/rn_idnumber"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="13dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout9">

        <TextView
            android:layout_width="13dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/viewDivider">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_student"
                android:padding="5dp"
                android:id="@+id/imageView4" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_toEndOf="@+id/imageView4"
                android:background="@null"
                android:hint="请输入学号"
                android:textColorHint="@color/edittext"
                android:id="@+id/rn_idstudent"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="13dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/shangchuan"
        android:text="上传"
        android:textColor="@color/white"
        android:layout_below="@+id/rn_photo"
        android:background="@drawable/btn_btton_pressed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />
    
    
    <ImageView
        android:layout_width="304dp"
        android:layout_height="194dp"
        android:id="@+id/rn_photo"
        android:src="@drawable/ico_frame_nor"
        android:layout_below="@+id/linearLayout9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

</RelativeLayout>
