<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    tools:context="com.school.bicycle.ui.Myeserve.MyReserveActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/mrshape"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:paddingLeft="9dp"
            android:src="@drawable/ico_bicycle_yellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="车 牌 号:"
            android:textColor="#393e46"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="0001"
            android:textColor="#393e46"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="15dp"
        android:background="@drawable/mrshape"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:paddingLeft="9dp"
            android:src="@drawable/ico_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="预约时间:"
            android:textColor="#393e46"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="6.3-6.4"
            android:textColor="#393e46"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="取消预约"
            android:textColor="#ff6938"
            android:textSize="17dp" />

    </LinearLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:background="@drawable/btn_btton_pressed"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white" />
</RelativeLayout>
