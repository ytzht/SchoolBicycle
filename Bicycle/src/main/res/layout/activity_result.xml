<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.bicycle.ui.result.ResultActivity">

    
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ico_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/iv_res_result"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜你，充值成功"
        android:textSize="17dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:id="@+id/te_res_result"
        android:textColor="@color/dps_textc"
        android:layout_below="@+id/iv_res_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />


    <Button
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="下一步"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_btton_pressed"
        android:layout_marginBottom="32dp"
        android:id="@+id/bt_res_next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
