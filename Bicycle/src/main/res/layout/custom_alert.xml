<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="31dp">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择您的长租时长:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/month1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_gray"
            android:gravity="center"
            android:text="一个月"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/month3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_org"
            android:gravity="center"
            android:text="三个月"
            android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/month6"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_gray"
            android:gravity="center"
            android:text="六个月"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/month12"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_gray"
            android:gravity="center"
            android:text="一年"
            android:textColor="#fff" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="请选择支付方式:" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingTop="25dp">

        <ImageView
            android:id="@+id/wx_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/btn_weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/wx_icon"
            android:layout_alignTop="@id/wx_icon"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/wx_icon"
            android:gravity="center"
            android:text="微信支付" />

        <CheckBox
            android:id="@+id/cb_wx"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_alignBottom="@id/wx_icon"
            android:layout_alignTop="@id/wx_icon"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/zfb_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ico_alipay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/zfb_icon"
            android:layout_alignTop="@id/zfb_icon"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/zfb_icon"
            android:gravity="center"
            android:text="支付宝支付" />

        <CheckBox
            android:id="@+id/cb_zfb"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_alignBottom="@id/zfb_icon"
            android:layout_alignTop="@id/zfb_icon"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/wallet_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ico_wallet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/wallet_icon"
            android:layout_alignTop="@id/wallet_icon"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/wallet_icon"
            android:gravity="center"
            android:text="我的钱包" />

        <CheckBox
            android:id="@+id/cb_wallet"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_alignBottom="@id/wallet_icon"
            android:layout_alignTop="@id/wallet_icon"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:text="确认付款"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/bg_org"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>