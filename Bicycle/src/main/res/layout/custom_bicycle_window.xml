<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bicyclenum_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:paddingLeft="7dp"
        android:text="我的车辆"
        android:gravity="center_horizontal"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/xian2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_bicyclenum_info"
        android:layout_marginTop="7dp"
        android:background="@color/edittext" />

    <ScrollView
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:id="@+id/scroll"
        android:layout_below="@+id/xian2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/xian2"
                android:layout_marginTop="5dp"
                android:paddingLeft="7dp"
                android:textColor="@color/all_textc"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_timerent_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_time_info"
                android:layout_marginTop="7dp"
                android:paddingLeft="7dp"
                android:textColor="@color/all_textc"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_dayrent_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_timerent_info"
                android:layout_marginTop="5dp"
                android:paddingLeft="7dp"
                android:textColor="@color/all_textc"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_longrent_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_dayrent_info"
                android:layout_marginTop="5dp"
                android:paddingLeft="7dp"
                android:textColor="@color/all_textc"
                android:textSize="11dp" />

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/xian3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/scroll"
        android:layout_marginTop="7dp"
        android:background="@color/edittext" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_below="@id/xian3"
        android:orientation="horizontal">
        <TextView
            android:layout_width="105dp"
            android:layout_height="27dp"
            android:text="共享收入"
            android:id="@+id/tv_tirentbt_info"
            android:textColor="@color/chengse"
            android:gravity="center"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/edittext"/>
        <TextView
            android:layout_width="105dp"
            android:layout_height="27dp"
            android:text="设置共享"
            android:id="@+id/tv_darentbt_info"
            android:textColor="@color/chengse"
            android:gravity="center"/>

    </LinearLayout>



</RelativeLayout>