<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    tools:context="com.school.bicycle.ui.Myeserve.MyReserveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mrshape"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:id="@+id/MyAppoint_carcolor"
                android:src="@drawable/ico_bicycle_yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="车 牌 号:"
                android:textColor="#393e46"
                android:textSize="17dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="0001"
                android:layout_weight="1"
                android:id="@+id/MyAppoint_num"
                android:textColor="#393e46"
                android:textSize="17dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="10dp"
                android:textSize="17dp"
                android:id="@+id/MyAppoint_detial"
                android:textColor="@color/chengse"
                android:text="车辆详情"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="73dp"
                android:layout_height="63dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:src="@drawable/ico_date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="预定时间:"
                android:textColor="@color/black_light"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/MyAppoint_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="6.3-6.4"
                android:textColor="@color/black_light"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/MyAppoint_cancle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="取消预定"
                android:textColor="@color/chengse"
                android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
